<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatbile" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Ivan Gregor Tabalno - Blog</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/igmtink/igmt-css/css/igmtink-css-reset.min.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <%- include('partials/header'); -%>

    <main>
      <section class="blog container-flex">
        <ul>

          <!-- For loop to add new (list element) -->
          <% status.forEach(function(status){ %>
            <list class="post-container">
              <h1><%= status.title %></h1>
              <pre><%= status.description %></pre>
            </list>
            
          <% }); %>

        </ul>
      </section>
    </main>

    <%- include('partials/footer'); -%>
  </body>
</html>
